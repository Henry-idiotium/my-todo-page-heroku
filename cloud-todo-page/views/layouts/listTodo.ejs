<div class="card my-5">
    <div class="card-body table-responsive my-card">
        <h1 class='text-center card-title text-white'>Todos List</h1>

        <table class="table table-dark table-hover text-center">
            <thead>
                <tr>
                    <th scope="col" style="width: 8%">No.</th>
                    <th scope="col" style="width: 62%" class="text-left">Description</th>
                    <th scope="col" style="width: 15%">Edit</th>
                    <th scope="col" style="width: 15%">Delete</th>
                </tr>
            </thead>
            <tbody>
                <!-- Display all todo -->
                <% todoVar.forEach((todo,index) => { %>
                    <tr>
                        <th scope="row">
                            <%= index + 1 %>
                        </th>
                        <td class="text-left">
                            <%= todo.description %>
                        </td>
                        <td class="my-btn">
                            <button type="button" class="btn btn-primary id-onclick-event" data-toggle="modal" data-target="#exampleModal" onclick="idOnClickEvent('<%=todo.todo_id%>')">
                            Edit
                            </button>
                        </td>
                        <td class="my-btn">
                            <button class='btn btn-danger delete-url' value="<%= todo.todo_id %>">
                            Delete
                            </button>
                        </td>
                    </tr>
                    <% }); %>

            </tbody>
        </table>

        <!-- Add todo -->
        <form id="myAddForm" class="input-group mb-3" onsubmit="submitHandler()">
            <input type="text" name="description" class="form-control" placeholder="Add a todo" aria-label="Add a todo" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <input type="submit" class="btn btn-info" value="Add" />
            </div>
        </form>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <form id="myUpdateForm" class="" onsubmit="updateHandler()">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Rewrite todo</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                            <input type="text" name="description" class="form-control" placeholder="Update todo" aria-label="Update todo" aria-describedby="basic-addon2">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <input id="myEdit" type="submit" class="btn btn-primary" value="Save changes"/>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <script>
            // Add Todo
            const $addForm = $("#myAddForm")
            $addForm.on('submit', submitHandler)

            function submitHandler(e) {
                e.preventDefault();

                $.ajax({
                    url: '/api/todos',
                    type: 'POST',
                    data: $addForm.serialize()
                }).done(response => {
                    console.log(response)
                })
                window.location = '/';
            }

            // Delete Todo 
            $('.delete-url').click(function(e) {
                e.preventDefault();

                var id = $(this).val();

                $.ajax({
                    url: '/api/todos/' + id,
                    type: 'DELETE',
                    dataType: 'json',
                }).done(response => {
                    console.log(response)
                });
                window.location = '/';
            });

            // Updates Todo 
            function idOnClickEvent(val) {
                $('#myUpdateForm').attr('value', val);
                // $('#myEdit').attr('value', val);
            }

            const $editForm = $("#myUpdateForm");
            $editForm.on('submit', updateHandler);

            function updateHandler(e) {
                e.preventDefault();

                var id = $(this).attr('value');

                $.ajax({
                    url: '/api/todos/' + id,
                    type: 'PUT',
                    dataType: 'json',
                    data: $editForm.serialize()
                }).done(response => {
                    console.log(response)
                })
                window.location = '/';
            }
        </script>

    </div>
</div>